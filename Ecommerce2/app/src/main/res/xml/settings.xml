<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferencyCategory
        app:key="notifications_category"
        app:title="Notificações">

        <SwitchPreference
            app:key="notifications"
            app:summary="Receba notificações sobre seus pedidos, produtos e promoções."
            app:title="Habilitar menssagens e notificações"/>
    </PreferencyCategory>

    <PreferencyCategory
        app:key="help_category"
        app:title="Ajuda">

        <preference
            app:key="feedback"
            app:summary="Avise de problemas técnicos ou envie sugestões de melhoria"
            app:title="Entrar em contato">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://msecommerce.com.br/contato"/>
        </preference>

    </PreferencyCategory>

</androidx.preference.PreferenceScreen>
